# 🎵 Living Artist Databank - 환경변수 템플릿
# 방송작가를 위한 AI 기반 시스템 설정
# 
# 사용법: 
# 1. 이 파일을 .env로 복사
# 2. 실제 값으로 교체
# 3. .env 파일은 절대 GitHub에 업로드하지 마세요!

# === 데이터베이스 설정 ===
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DATABASE=artist_databank
MONGODB_COLLECTION=artists

# === API 키 설정 ===
# Last.fm (음악 데이터 수집)
LASTFM_API_KEY=your_lastfm_api_key_here
LASTFM_API_SECRET=your_lastfm_api_secret_here
LASTFM_USERNAME=your_lastfm_username

# Notion (대시보드 연동)
NOTION_TOKEN=secret_your_notion_integration_token
NOTION_DATABASE_ID=your_notion_database_id
NOTION_PAGE_ID=your_notion_page_id

# OpenAI (AI 콘텐츠 생성)
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# Google Cloud Platform
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GCP_REGION=asia-northeast3

# === 시스템 설정 ===
# 개발/운영 환경
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# 데이터 수집 설정
DATA_UPDATE_FREQUENCY=daily
MAX_ARTISTS_PER_RUN=100
TRENDING_THRESHOLD=0.7
BACKUP_ENABLED=true

# === 방송 콘텐츠 설정 ===
# 타겟 언어 및 지역
CONTENT_LANGUAGE=korean
TARGET_REGION=south_korea
TIMEZONE=Asia/Seoul

# AI 콘텐츠 생성 설정
AI_CREATIVITY_LEVEL=high
CONTENT_TYPES=방송기획안,아티스트분석,트렌드리포트
TARGET_AUDIENCE=방송제작진

# === 알림 설정 ===
# 이메일 알림
EMAIL_NOTIFICATIONS=true
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Slack 알림 (선택사항)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_CHANNEL=#artist-updates

# === 보안 설정 ===
SECRET_KEY=your_secret_key_for_encryption
JWT_SECRET=your_jwt_secret_key
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# === 성능 설정 ===
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
CACHE_TTL=3600
RATE_LIMIT=100

# === 방송작가 전용 설정 ===
# 콘텐츠 우선순위
CONTENT_PRIORITY=화제성,독창성,시청률,화반성
PROGRAM_CATEGORIES=음악방송,토크쇼,다큐멘터리,예능
TARGET_AGE_GROUPS=10대,20대,30대,40대이상

# 기획 설정
IDEA_GENERATION_MODE=creative
TREND_ANALYSIS_DEPTH=comprehensive
CONTENT_REFRESH_INTERVAL=6h
